{% extends "layout.twig" %}
{% block content %}

<div id="wrap">
	<div class="bk-pt-home">
		<nav class="bk-nav" id="nav">
			{{widget('extendednavigation', 'navigationheader', {"align":"right"})|raw}}

			{% if plugins.ecommerce.store.live %}
                {{widget('ecombasket', 'shopbasket', {})|raw}}
            {% endif %}

			{{widget('socialicons', 'social', {'googleplus': 'profile', 'linkedin':'profile', 'facebook': 'profile', 'twitter': 'profile', 'youtube': 'profile', 'rss': 'profile'})|raw}}
		</nav>
		<div role="main" id="main">
				{{widget('feature', 'featurehome', {"header": "profile", "strapline":"profile", "buttonText":"Lorem Ipsum","defaultBgImg": asset('images/feature-bg.jpg'), 'positionTopPercentage': '50','showBtn': true, 'align':'justifycenter'})|raw}}
			<header class="bk-header">
				{{widget('logo', 'logo', {"defaultlogo": asset('images/logo.svg'),"showTplWidget":"0"})|raw}}
				{{widget('companyname', 'companyname', {"business": "profile"})|raw}}
			</header>
			<div class="contain" id="contain">
				{{zone('main')|raw}}
			</div><!--end contain-->
		{% include 'includes/footer.twig' %}
		</div><!--end main-->
	</div><!--end bk-pt-home-->
</div><!--end wrap-->

{% endblock %}